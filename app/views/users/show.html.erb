<%= link_to 'All users', "/users" %>

<%= form_for(@user) do |f| %>

  <p>
    Username: <%= @user.username %>
  </p>
  <p>
    Password: <%= @user.password %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
 
  <p>
    <%= f.submit "更新密码" %>
  </p>

<% end %>


